<section class="mt-5">
    <div class="container-fluid pt-5">
        <div class="float-end pb-5">
            <a href="/admin/add-products" class="btn btn-success">Add Product</a>
        </div>
        <table class="table table-dark table-striped pt-5">
            <thead>
                <tr>
                    
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Options</th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    
                    <td>{{this.Title}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td>{{this.Price}}</td>
                    <td>
                    <img style="width: 3rem; height: 4rem;"src="/product-images/{{this._id}}.jpg" alt="">
                    </td>
                    <td>
                        <a href="/admin/edit-products/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.Title}} ?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>